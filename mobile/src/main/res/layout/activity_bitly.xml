<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bitly">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_bitly"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bitly"
        android:minHeight="?attr/actionBarSize" />

    <WebView
        android:id="@+id/webview_bitly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bitly_icon_wrapper"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal" >

        <ProgressBar
            android:id="@+id/progress_bitly"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="true"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/bitly_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bitly_fugu"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/accounts_bitly" />

        <ImageView
            android:id="@+id/bitly_text"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/bitly_text"
            android:tint="@color/white"
            android:contentDescription="@string/accounts_bitly"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>