<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thunsaker.rapido"
    android:versionCode="17"
    android:versionName="1.8.6.2" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Map Stuff -->
    <permission
        android:name="com.thunsaker.rapido.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.thunsaker.rapido.permission.MAPS_RECEIVE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Rapido">
        <activity
            android:name="com.thunsaker.rapido.ui.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.SEND" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>

        <activity android:name="com.facebook.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <!--android:theme="@android:style/Theme.Dialog"-->
        <activity
            android:name="com.thunsaker.rapido.ui.TwitterAuthorizationActivity"
            android:label="@string/title_activity_twitter" />
        <activity
            android:name="com.thunsaker.rapido.ui.BitlyAuthorizationActivity"
            android:label="@string/title_activity_bitly" />
        <activity
            android:name="com.thunsaker.rapido.ui.FoursquareAuthorizationActivity"
            android:label="@string/title_activity_foursquare" />
        <activity
            android:name="com.foursquare.android.nativeoauth.TokenExchangeActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/title_activity_foursquare" />

        <activity
            android:name="com.thunsaker.rapido.ui.PlusAuthorizationActivity"
            android:label="@string/title_activity_google_plus" />
        <activity
            android:name="com.thunsaker.rapido.ui.AppDotNetAuthorizationActivity"
            android:label="@string/title_activity_app_dot_net" />


        <activity android:name="com.thunsaker.rapido.ui.PreferencesActivity" />

        <activity
            android:name="com.thunsaker.rapido.ui.LocationActivity"
            android:label="@string/title_activity_location"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.thunsaker.rapido.ui.LocationSearchResultsActivity"
            android:exported="false"
            android:label="@string/title_activity_location_results" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <service
            android:name="com.thunsaker.rapido.PersistentExtension"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA" >
            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension" />
            </intent-filter>

            <meta-data
                android:name="protocolVersion"
                android:value="1" />
            <meta-data
                android:name="description"
                android:value="@string/prefs_persistent_notification_summary_on" />
        </service>

        <receiver android:name="com.thunsaker.rapido.PersistentNotificationStartupReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_api_key" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="@string/crashlytics_key"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

		<activity
			android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>
</manifest>